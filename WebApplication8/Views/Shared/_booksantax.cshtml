@model bookModel
<div class="card mb-4 shadow-sm">
   
    <img src="@(string.IsNullOrEmpty(Model.coverImgURl) ?"/books/cover/dummy.jpg" : Model.coverImgURl)" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title"> @(string.IsNullOrEmpty(Model.title) ? "Name Not avaliable" : Model.title)</h3>
        <p class="card-text">
            @(string.IsNullOrEmpty(Model.authorName) ? "Author Not avaliable" : Model.authorName)
        </p>
        <div @*class="d-flex justify-content-between align-items-center*@">
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary" asp-controller="book" asp-action="getidbook" asp-route-id="@Model.id" >view deitiles</button>
            </div>
        </div>
    </div>
</div>
