@{ViewData["Title"] = "the book is" + Model.title; }

<body>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators" >
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-50 h-25" src="~/books/cover/626e6710-9d00-41e9-97e7-05175b9b4d98_2-картинка-1-1024x536.jpg" alt="First slide" />
                </div>
                <div class="carousel-item">

                    <img class="d-block w-50 h-25" src="~/books/cover/d22be903-c1cd-4749-a1aa-e7d714f62b88_Guidelines.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">

                    <img class="d-block w-50 h-25" src="~/books/cover/da5903fc-3e07-4a2c-98ea-fef5abb0a86a_تنزيل (2).jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    
    <div class="col-md-6" style="margin-left:650px;margin-top:-260px;">
        <div class="row">
          
            <div class="col-md-12">
                <h1>@Model.title</h1>
            </div>


            <div class="col-md-12 text-primary">
                <h3 class="monospaced">By: @Model.authorName</h3>

            </div>

            <div class="col-md-12">
                <a class="btn btn-outline-primary" href="@Model.bookpdfURL">Read Now</a>
            </div>
        </div>
    </div>



</body>


